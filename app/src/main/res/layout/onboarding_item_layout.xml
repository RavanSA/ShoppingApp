<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_normal"
    >

    <TextView
        android:id="@+id/tvOnBoardItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purchase Online"
        android:maxLines="4"
        android:layout_marginTop="@dimen/margin_small"
        android:letterSpacing="0.1"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_x_large_title"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tvOnBoardItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:maxLines="4"
        android:layout_marginTop="@dimen/margin_small"
        android:letterSpacing="0.1"
        android:textAlignment="textStart"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_large_title"
        app:layout_constraintTop_toBottomOf="@id/tvOnBoardItemTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/imageSlideIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_x_x_large"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOnBoardItemDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>